# Auto-detect text files and normalize line endings to LF
* text=auto

# Force LF for specific files
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf

# Binary files should be treated as-is
*.png binary
*.jpg binary
*.gif binary
*.svg binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary

# Lock files
package-lock.json text eol=lf
yarn.lock text eol=lf
